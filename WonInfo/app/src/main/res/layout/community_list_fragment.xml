<?xml version="1.0" encoding="utf-8"?>



<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/community_layout_refrash"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/community_recycler_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:itemCount="9"
                tools:listitem="@layout/community_list_item" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Theme_LightGray">

                <TextView
                    android:id="@+id/board1_button_prev"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/all_item_loggedinbtn"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingTop="4dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="4dp"
                    android:text="Prev"
                    android:textColor="@color/Theme_White"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/board1_list_page"
                    app:layout_constraintEnd_toStartOf="@+id/board1_list_page"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/board1_list_page" />

                <LinearLayout
                    android:id="@+id/board1_list_page"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/board1_button_next"
                    app:layout_constraintStart_toEndOf="@+id/board1_button_prev"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/board1_text_page1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/all_ripple_click"
                        android:backgroundTint="@color/Theme_LightGray"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:text="1"
                        android:textColor="@color/Theme_Gray"
                        android:textSize="@dimen/font_18sp" />


                    <TextView
                        android:id="@+id/board1_text_page2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/all_ripple_click"
                        android:backgroundTint="@color/Theme_LightGray"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:text="2"
                        android:textColor="@color/Theme_Gray"
                        android:textSize="@dimen/font_18sp" />

                    <TextView
                        android:id="@+id/board1_text_page3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/all_ripple_click"
                        android:backgroundTint="@color/Theme_LightGray"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:text="3"
                        android:textColor="@color/Theme_Gray"
                        android:textSize="@dimen/font_18sp" />

                    <TextView
                        android:id="@+id/board1_text_page4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/all_ripple_click"
                        android:backgroundTint="@color/Theme_LightGray"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:text="4"
                        android:textColor="@color/Theme_Gray"
                        android:textSize="@dimen/font_18sp" />

                    <TextView
                        android:id="@+id/board1_text_page5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/all_ripple_click"
                        android:backgroundTint="@color/Theme_LightGray"
                        android:clickable="true"
                        android:gravity="center_horizontal"
                        android:text="5"
                        android:textColor="@color/Theme_Gray"
                        android:textSize="@dimen/font_18sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/board1_button_next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/all_item_loggedinbtn"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingTop="4dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="4dp"
                    android:text="Next"
                    android:textColor="@color/Theme_White"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/board1_list_page"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/board1_list_page" />
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>