<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#99000000">

    <ImageView
        android:id="@+id/tutorial_close_button"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/tutorial_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorBackground"
        android:textSize="@dimen/title_size"
        android:layout_weight="1"
        android:layout_margin="@dimen/form_contentmargin"
        android:text="검색창"
        android:id="@+id/textView3" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="84dp"
        android:layout_weight="1"
        android:text="웹정보서비스 바로가기"
        android:textColor="@color/colorBackground"
        android:textSize="@dimen/title_size"
        android:id="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft ="@dimen/form_contentmargin"
        android:layout_marginTop="@dimen/form_contentmargin"
        android:layout_weight="1"
        android:text="메뉴"
        android:textColor="@color/colorBackground"
        android:textSize="@dimen/title_size" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_contentmargin"
        android:layout_marginLeft="74dp"
        android:layout_weight="1"
        android:text="제목"
        android:textColor="@color/colorBackground"
        android:textSize="@dimen/title_size" />

</RelativeLayout>
