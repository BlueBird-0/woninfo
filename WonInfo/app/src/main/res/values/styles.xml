<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent= "Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:textColor">@color/colorPrimaryDark</item>      테마 글씨체 (지우면 원래색) -->

        <!-- toolbar & bottombar -->
        <item name="actionBarSize">49dp</item>
        <!-- 포커스 되어있지 않은 경우의 밑줄 부분 -->
        <item name="android:colorControlNormal">@color/Theme_Black</item>
        <!-- 터치된 마지막 물방울 모양 -->
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <!-- 툴바 아이콘 색 -->
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <!-- edittext 커서 색 -->
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">36dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Apptheme.BottomItems" parent="AppTheme">
        <item name="android:textSize">2sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>
