<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bluebird.inhak.woninfo">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_appicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true"
        android:resizeableActivity="false"
        android:usesCleartextTraffic="true">
        <meta-data android:name="firebase_messaging_auto_init_enabled"
            android:value="false" />
        <activity
            android:name="com.bluebird.inhak.woninfo.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:scheme="@string/kakao_scheme"
                    android:host="@string/kakaolink_host"/>
            </intent-filter>
        </activity>

        <activity android:name="com.bluebird.inhak.woninfo.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.bluebird.inhak.woninfo.LoginActivity"
            android:theme="@style/DialogTheme" >
        </activity>
        <activity android:name="com.bluebird.inhak.woninfo.CommunitySettingRules"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.bluebird.inhak.woninfo.MilitaryLeave"
            android:theme="@style/DialogTheme" >
        </activity>
        <activity android:name="com.bluebird.inhak.woninfo.Reserve"
            android:theme="@style/DialogTheme" >
        </activity>
        <activity android:name="com.bluebird.inhak.woninfo.Popupgirloffically"
            android:theme="@style/DialogTheme" >
        </activity>
        <activity android:name="com.bluebird.inhak.woninfo.PopupEnd"
            android:theme="@style/DialogTheme" >
        </activity>
        <activity android:name="com.bluebird.inhak.woninfo.Popupdormitory"
            android:theme="@style/DialogTheme" >
        </activity>
        <activity android:name="com.bluebird.inhak.woninfo.Setting"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.bluebird.inhak.woninfo.SettingAlarm"
        android:screenOrientation="portrait" >
    </activity>
        <activity android:name="com.bluebird.inhak.woninfo.DeveloperPage"
            android:screenOrientation="portrait" >
        </activity>


        <activity android:name="com.bluebird.inhak.woninfo.Popup.Popup01Activity"
            android:theme="@style/DialogTheme" >
        </activity>

        <activity android:name=".Dictionary.A24Fragment.A24PopupFragment"
            android:theme="@style/DialogTheme" >
        </activity>

        <activity android:name="com.bluebird.inhak.woninfo.CreateUserPopup"
            android:theme="@style/DialogTheme" >
        </activity>
        <activity android:name="com.bluebird.inhak.woninfo.Popup.PopupLogout"
            android:theme="@style/DialogTheme" >
        </activity>
        <!--activity android:name="com.bluebird.inhak.woninfo.Popup.PopupWritesuccess"
            android:theme="@style/DialogTheme" >
        </activity-->
        <!--HS-->

        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/>


        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key"/>
        <receiver android:name=".Dictionary.A16Fragment.A16Broadcast"/>
        <service
            android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>



    </application>


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
</manifest>